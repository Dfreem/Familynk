@model EventVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FamilyEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" asp-controller="Calendar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Edit.FamilyEventId" value="@Model.Edit.FamilyEventId" />
            <div class="form-group">
                <label asp-for="Edit.Title" class="control-label"></label>
                <input asp-for="Edit.Title" class="form-control" />
                <span asp-validation-for="Edit.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edit.Details" class="control-label"></label>
                <input asp-for="Edit.Details" class="form-control" />
                <span asp-validation-for="Edit.Details" class="text-danger"></span>
            </div>
            @foreach (var comment in Model.Edit.Comments)
            {
                <label>@comment</label>
                <p>@comment.Body</p>
                <a asp-action="DeleteComment" asp-controller="FamilyEvent" asp-route-id="@comment.CommentId">
                    <i class="bi bi-trash text-danger"></i>
                </a>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

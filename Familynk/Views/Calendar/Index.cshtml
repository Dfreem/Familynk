@model FamilyCalendar

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Calendar">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Events)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Events.IsNullOrEmpty())
        {

            @foreach (var item in Model.Events!)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FamilyEventId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.FamilyEventId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.FamilyEventId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

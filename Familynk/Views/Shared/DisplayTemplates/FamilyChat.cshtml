@model FamilyChat
@{

}

@*<link rel="stylesheet" href="FamilyChat.cshtml.css" />*@

<ul class="chat">
    @foreach (var message in @Model.Messages)
    {
        Html.DisplayFor(model => message.Sender.UserName);
        Html.DisplayFor(model => User.Identity!.Name!);
        @if (User.Identity!.Name!.Equals(message.Sender.UserName))
        {

            <li class="message left">
                <img class="logo" src="https://randomuser.me/api/portraits/women/17.jpg" alt="">
                <div class="delete-message-icon">
                    <a asp-action="DeleteFamilyMessage" asp-controller="Family" asp-route-familyMessageId="@message.FamilyMessageId"><i class="bi bi-trash text-danger"></i></a>
                </div>

                <b>@message.Sender.Name</b>
                <p>@message.Body</p>
            </li>

        }
        else
        {
            <li class="message right">
                <img class="logo" src="https://randomuser.me/api/portraits/men/67.jpg" alt="">
                <b>@message.Sender.Name</b>
                <p>@message.Body</p>
            </li>

        }
    }
</ul>
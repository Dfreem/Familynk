@model LivingRoomVM
@{
    ViewData["Title"] = "Welcome Home " + Model.Family.FamilyName + " Family";
    FamilyMessage newMessage = new();
}
<h1>@ViewData["Title"]</h1>

<div class="family-calendar mt-4">
    @Html.DisplayFor(model => model.Family.GetCalendar)
</div>
<div class="chat-container">
        <div class="tv">
            @Html.DisplayFor(model => model.ChatTv)
        </div>

    <div class="chat-input">
        <form method="post" asp-action="SendFamilyMessage" asp-controller="Family" asp-route-newMessage="@newMessage">
            @*<input type="hidden" asp-for="@Model.ChatTv.SenderId" value="@Model.ChatTv.SenderId" class="form-control" />*@
            <button type="submit" class=" btn btn-outline-success circle  chat-submit"><i class="bi bi-send"></i></button>
            <input class="text_input" asp-for="@newMessage.Body" />
        </form>
    </div>
</div>

@model LivingRoomVM
@{
    ViewData["Title"] = "Welcome Home " + Model.Family.FamilyName + " Family";
    FamilyMessage newMessage = new();
}
<h1>@ViewData["Title"]</h1>

<div class="family-calendar">
    @Html.DisplayFor(model => model.Family.GetCalendar)
</div>

<div class="chat-wrap d-grid">
    <div class="row">
        <div class="col-5">
            @Html.DisplayFor(model => model.ChatTv)

            <form asp-controller="Family" asp-action="SendFamilyMessage" asp-route-newMessage="@newMessage">
                <input asp-for="@newMessage.Body" type="text" />
                <input type="hidden" asp-for="@newMessage.SenderName" value="@Model.CurrentUser.Name" class="form-control" />
                <input type="submit" value="send" class="btn btn-primary" />


            </form>
        </div>

    </div>

</div>

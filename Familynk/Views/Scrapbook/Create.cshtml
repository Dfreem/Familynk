@model ScrapBookVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Scrap</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewScrap.Title" class="control-label"></label>
                <input asp-for="NewScrap.Title" class="form-control" />
                <span asp-validation-for="NewScrap.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewComment" class="control-label"></label>
                <input asp-for="NewComment" class="form-control" />
                <span asp-validation-for="NewScrap.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="FileUpload" type="file" class="form-control" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ScrapBookVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Scrap</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Edit.ScrapId" />
            <div class="form-group">
                <label asp-for="Edit.Title" class="control-label"></label>
                <input asp-for="Edit.Title" class="form-control" />
                <span asp-validation-for="Edit.Title" class="text-danger"></span>
            </div>
            @foreach (var comment in @Model.Edit.Comments)
            {

                <div class="form-group">
                    <label asp-for="@comment.Body" class="control-label"></label>
                    <input asp-for="@comment.Body" class="form-control" />
                    <span asp-validation-for="@comment.Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@comment." class="control-label"></label>
                    <input asp-for="@comment.Body" class="form-control" />
                    <span asp-validation-for="@comment.Body" class="text-danger"></span>
                </div>
            }
        </form>

        @foreach (var image in Model.Edit.Images)
        {
            <form asp-action="UpdateScrapImage" asp-controller="Scrapbook">
                <input type="hidden" asp-for="@image.ImageId" />
                <div class="form-group">
                    <label asp-for="@image.FileData">new image</label>
                    <input type="image" asp-for="@image.FileData" />
                </div>
            </form>
        }
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ScrapBookVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Entries)
            </th>
            <th>
                Created By
            </th>
            <th>
                Date Created
            </th>
            <th>
                Contents
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Book.Entries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments!.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ScrapId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ScrapId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ScrapId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
